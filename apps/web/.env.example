# Happy Observatory Environment Configuration Example
# Copy this file to .env.local and update with your values

# Bridge Server Configuration
# The main server that bridges communication between the UI and various services
NEXT_PUBLIC_BRIDGE_WS_URL=ws://localhost:52521
NEXT_PUBLIC_BRIDGE_API_URL=http://localhost:52521

# MCP Daemon Configuration
# Model Context Protocol daemon for AI agent coordination
NEXT_PUBLIC_MCP_DAEMON_URL=http://localhost:5174

# API Base URL
# Main Observatory API endpoint
NEXT_PUBLIC_API_URL=http://localhost:3000

# Happy DevKit API (for backend services)
HAPPY_DEVKIT_API=http://localhost:8000

# Feature Flags
# Enable mock data mode (useful for development without backend services)
NEXT_PUBLIC_MOCK_MODE=false

# Enable telemetry collection
NEXT_PUBLIC_TELEMETRY_ENABLED=true

# Session secrets (required for production)
SESSION_SECRET=your-session-secret-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Production URLs (override defaults in production)
# NEXT_PUBLIC_BRIDGE_WS_URL=wss://bridge.happypatterns.org
# NEXT_PUBLIC_BRIDGE_API_URL=https://bridge.happypatterns.org
# NEXT_PUBLIC_MCP_DAEMON_URL=https://mcp.happypatterns.org
# NEXT_PUBLIC_API_URL=https://api.happypatterns.org